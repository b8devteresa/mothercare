<style>
  .section__text-image .grid{
    margin-left:0;
    display: flex;          
    flex-direction: row; 
    align-items: stretch;    
    height: 100%;
  }

  .section__text-image .grid__item{
    padding-left:0;
  }

  .text-image__text-container{
    height: 100%;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding:40px 60px;
    text-align:center;
  }

  .text-image__image-container.image-4{
    background-image:url({{ section.settings.image | img_url: '1024x' }});
    padding-bottom:107%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  .text-image__title{
    font-size:24px;
    font-weight:500;
    padding:8px 0;
  }

  .text-image__p{
    font-size:18px;
    font-weight:300;
    line-height:1.3;
  }

  .text-image__cta{
    font-size:12px;
    font-weight:500;
    margin-top:16px;
    letter-spacing:0px;
    text-decoration: underline;
  }
</style>

<div class="page-width section__text-image image-right">
  <div class="grid">
    <div class="grid__item one-half small--one-whole">
      <div class="text-image__text-container" style="background:#F2F1ED;">
        <div class="text-image__title">{{ section.settings.title }}
        </div>
        <div class="text-image__p">{{ section.settings.paragraph }}
        </div>
        <a class="text-image__cta" href="{{ section.settings.url }}">{{ section.settings.button }}</a>
      </div>
    </div>
    <div class="grid__item one-half small--one-whole">
      <div class="text-image__image-container image-4"></div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": {
    "en": "MC Image Text Grid Single"
  },
  "class": "index-section",
  "settings": [
	{	
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
	{	
      "type": "text",
      "id": "title",
      "label": "Title"
    },	
	{
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph"
    },
	{
      "type": "text",
      "id": "button",
      "label": "Button"
    },
	{
      "type": "url",
      "id": "url",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "MC Image Text Grid Single"
      },
      "category": {
        "en": "Mother Care"
      }
    }
  ]
}
{% endschema %}
